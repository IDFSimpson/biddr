<p id="notice"><%= notice %></p>

<h1>Listing Auctions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Ends</th>
      <th>Reserve price</th>
      <th>Current price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= auction.title %></td>
        <td><%= auction.details %></td>
        <td><%= auction.ends %></td>
        <td><%= auction.reserve_price %></td>
        <td><%= auction.current_price %></td>
        <td><%= link_to 'Show', auction %></td>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auction', new_auction_path, {class: "btn btn-default"} %>
