<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @auction.title %>
</p>

<p>
  <strong>Details:</strong>
  <%= @auction.details %>
</p>

<p>
  <strong>Ends:</strong>
  <%= @auction.ends %>
</p>

<p>
  <strong>Reserve price:</strong>
  <%= number_to_currency(@auction.reserve_price) %>
</p>

<p>
  <strong>Current price:</strong>
  <%= number_to_currency(@auction.current_price) %>
</p>

<div id="bid_form">
  <%= render "/bids/form", bid: @bid %>
</div>

<div id="previous_bids">
  <% @auction.bids.each do |bid| %>
    <div><%= number_to_currency(bid.offer_price) %> by <%= bid.user.email %> at <%= bid.bid_date %></div>
  <% end %>
</div>

<%= link_to 'Edit', edit_auction_path(@auction) %> |
<% if @auction.draft? && @auction.user == current_user %>
 <%= link_to "Publish", auction_publishings_path(@auction), method: :patch, data: {confirm: "Are you sure you want to publish?"} %> |
<% end %>
<%= link_to 'Back', auctions_path %>
