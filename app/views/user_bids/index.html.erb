<p id="notice"><%= notice %></p>

<h1>Your Bids</h1>

<table class="table">
  <thead>
    <tr>
      <th>Bid date</th>
      <th>Offer price</th>
      <th>Current price</th>
      <th>Auction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.bid_date %></td>
        <td><%= number_to_currency(bid.offer_price) %></td>
        <td><%= number_to_currency(bid.auction.current_price) %></td>
        <td><%= link_to bid.auction.title, bid.auction %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

